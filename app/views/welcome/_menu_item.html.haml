%li.span4
  .thumbnail
    =image_tag("cheeseburger.jpg", alt: "#{food.name}")
    .caption
      %h3
        =food.name
      %p
        ="$#{food.price / 100}.#{'%02d' % (food.price % 100)}"
      .row
        %a.add-food.btn.btn-primary.btn-block{food:"#{food.name}", price:"#{food.price}", id:"#{food.name.downcase.delete(' ')}"} Add to Order